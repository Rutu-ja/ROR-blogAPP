<!-- app/views/posts/new.html.erb -->
<%= form_with(model: @post, local: true, class: "new_post") do |form| %>
<h1>New Post</h1>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>

